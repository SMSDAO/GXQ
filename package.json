{
  "name": "tradeos-app",
  "version": "1.0.0",
  "scripts": {
    "dev": "next dev",
    "start": "next start",
    "build": "next build",
    "export": "next export -o docs",
    "deploy": "npm run build && npm run export",
    "test": "jest --passWithNoTests",
    "test:unit": "jest tests/unit --passWithNoTests",
    "test:integration": "jest tests/integration --passWithNoTests",
    "test:watch": "jest --watch --passWithNoTests",
    "deploy:dev": "pwsh -ExecutionPolicy Bypass -File deploy-runner.ps1 -Environment DEV",
    "deploy:test": "pwsh -ExecutionPolicy Bypass -File deploy-runner.ps1 -Environment TEST",
    "deploy:prod": "pwsh -ExecutionPolicy Bypass -File deploy-runner.ps1 -Environment PROD"
  },
  "dependencies": {
    "next": "^15.4.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@types/react": "19.1.8",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": ["**/tests/**/*.test.js"],
    "collectCoverageFrom": [
      "backend/**/*.js",
      "frontend/**/*.{js,jsx,ts,tsx}",
      "!**/node_modules/**",
      "!**/tests/**"
    ]
  }
}
